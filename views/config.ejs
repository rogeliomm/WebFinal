<%- include ("./partials/_header") %>


<form class="form-signin" action="/config" method="POST">
    <h1 class="h3 mb-3 font-weight-normal">User configuration</h1>
    <label for="inputEmail" class="sr-only">Email address</label>
    <input type="email" id="inputEmail" class="form-control" name="email" placeholder="Email address" required autofocus>
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" id="inputPassword" class="form-control" name="password" placeholder="Password" required>
    <label for="inputName" class="sr-only">Name</label>
    <input type="name" id="inputName" class="form-control" name="name" placeholder="Name" required>
    <label for="inputLastName" class="sr-only">Last Name</label>
    <input type="lastname" id="inputLastName" class="form-control" name="lastname" placeholder="Lastname" required>
    <div class="checkbox mb-3">
      <label>
        <input type="checkbox" value="remember-me"> Remember me
      </label>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">Confirm</button>
    <a href="/delete" class="btn btn-lg btn-secondary btn-block" role="button">Delete User</a>
    <p class="mt-5 mb-3 text-muted">&copy; 2021</p>
</form>


<%- include ("./partials/_footer") %>